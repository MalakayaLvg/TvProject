{% extends '../../base.html.twig' %}

{% block title %}SearchBar{% endblock %}

{% block body %}

    <a class="btn btn-primary" href="{{ path('app_film') }}">films</a>

    <h2>Résultats de recherche :</h2>

    {% if films is not empty %}
        <ul>
            {% for film in films %}
                <li>
                    <h3>{{ film.title }}</h3>
                    <p>{{ film.description }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun films trouvé pour cette recherche.</p>
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Register</h1>

        {# Afficher les erreurs de formulaire #}
        {% if form_errors(registrationForm) %}
            <div class="alert alert-danger">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {# DÃ©marrer le formulaire #}
        {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}

        <div class="form-group">
            {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="form-group form-check">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-primary">Register</button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

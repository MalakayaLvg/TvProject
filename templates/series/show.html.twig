{% extends 'base.html.twig' %}

{% block title %}Détails de la série - {{ series.title }}{% endblock %}

{% block body %}

    <div class="container mt-3">
        <h1 class="my-4">Détails de la série : {{ series.title }}</h1>

        <table class="table table-bordered table-striped">
            <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th scope="row">Titre</th>
                <td>{{ series.title }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ series.description }}</td>
            </tr>
            <tr>
                <th scope="row">Date de publication</th>
                <td>{{ series.publishDate ? series.publishDate|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
                <th scope="row">Note critique</th>
                <td>{{ series.criticalRate is not null ? series.criticalRate : 'Non noté' }}</td>
            </tr>
            <tr>
                <th scope="row">Vu</th>
                <td>{{ series.seen ? 'Oui' : 'Non' }}</td>
            </tr>
            </tbody>
        </table>

        <h2 class="my-4">Saisons</h2>

        <div class="accordion" id="seasonsAccordion">
            {% for season in seasons %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-{{ loop.index }}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ loop.index }}" aria-expanded="false" aria-controls="collapse-{{ loop.index }}">
                            Saison {{ season.number }}: {{ season.title }}
                        </button>
                    </h2>
                    <div id="collapse-{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading-{{ loop.index }}" data-bs-parent="#seasonsAccordion">
                        <div class="accordion-body">
                            <strong>Description:</strong> {{ season.description }}<br>
                            <strong>Date de publication:</strong> {{ season.publishDate ? season.publishDate|date('Y-m-d') : 'N/A' }}<br>
                            <strong>Vu:</strong> {{ season.seen ? 'Oui' : 'Non' }}<br>

                            <a href="{{ path('app_season_show', {id: season.id}) }}" class="btn btn-info mt-2">Voir</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune saison disponible pour cette série.</p>
            {% endfor %}
        </div>

        <form method="post" action="{{ path('app_delete', {id: series.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette série ?');" class="my-3">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ series.id) }}">
            <button class="btn btn-danger">Supprimer</button>
            <a href="{{ path('app_edit', {id: series.id}) }}" class="btn btn-warning my-3">Éditer</a>
        </form>

        <a href="{{ path('app_season_create', {series: series.id}) }}" class="btn btn-success mb-3">Créer une nouvelle saison</a>

        <a href="{{ path('app_season', {id: series.id}) }}" class="btn btn-secondary mb-3">Retour à la série</a>
    </div>

{% endblock %}

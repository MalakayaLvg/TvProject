{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    {% include 'admin/navbar/navbar.html.twig' %}

    <div class="users-table-container">
        <div class="header">
            All users: {{ users|length }}
            <span class="sort-option">Sort by: Date â¯ˆ</span>
        </div>

        <table class="users-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Roles</th>
                <th>Created at</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td></td>
                    <td>
                        <div class="action-icons">
                            <a href="{{ path("app_user_admin_show", {id: user.id}) }}">
                                <i class="bi bi-eye fs-2 me-3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

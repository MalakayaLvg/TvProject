{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    {% include 'admin/navbar/navbar.html.twig' %}

    <div class="users-table-container">
        <div class="header">
            User: {{ user.username }}
        </div>
        <p class="fs-5">ID : {{ user.id }}</p>
        <p class="fs-5">Roles : {{ user.roles|join(', ') }} <a href="{{ path("app_user_admin_edit", {id:user.id}) }}"><i class="ms-2 bi bi-pencil fs-4 text-white"></i></a></p>

        <div class="header mt-5">Comments :</div>
        <table class="users-table">
            <thead>
            <tr>
                <th>Film</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                {% for comment in user.comments %}
                <tr>
                    <td>
                        {% if comment.series %}
                            {{ comment.series.title }}
                        {% elseif comment.film %}
                            {{ comment.film.title }}
                        {% else %}
                            Aucun contenu
                        {% endif %}
                    </td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.createdAt|date('Y-m-d') }}</td>
                    <td>
                        <div class="action-icons">
                        <a href="{{ path('app_comment_show_admin',{id:comment.id}) }}"><i class=" bi bi-eye fs-2"></i></a>
                        <a href="{{ path('app_comment_delete',{id:comment.id}) }}"><i class=" bi bi-trash fs-2"></i></a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="header mt-5">Rates :</div>
        <table class="users-table">
            <thead>
            <tr>
                <th>Film</th>
                <th>Rate</th>
                <th>CreatedAt</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>

    <div class="mt-5 d-flex justify-content-center">
        {{ form_start(delete_form) }}
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <input type="submit" value="Delete User" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
        {{ form_end(delete_form, {'render_rest': false}) }}
    </div>





{% endblock %}


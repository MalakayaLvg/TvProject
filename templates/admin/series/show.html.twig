{% extends 'base.html.twig' %}

{% block title %}Détails de la série - {{ series.title }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1 class="my-4 text-center">Détails de la série : <span class="text-primary">{{ series.title }}</span></h1>
        <div class="d-flex justify-content-between mb-4">
            <a href="{{ path('app_series_admin') }}" class="btn btn-secondary">Retour à la liste des séries</a>
            <form method="post" action="{{ path('app_series_delete', {id: series.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette série ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ series.id) }}">
                <button class="btn btn-danger">Supprimer la série</button>
                <a href="{{ path('app_series_edit', {id: series.id}) }}" class="btn btn-warning">Éditer la série</a>
            </form>
        </div>

        <table class="table table-hover table-striped border">
            <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th scope="row">Titre</th>
                <td>{{ series.title }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ series.description }}</td>
            </tr>
            <tr>
                <th scope="row">Date de publication</th>
                <td>{{ series.publishDate ? series.publishDate|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
                <th scope="row">Note critique</th>
                <td>{{ series.criticalRate is not null ? series.criticalRate : 'Non noté' }}</td>
            </tr>
            </tbody>
        </table>

        <h2 class="my-4">Saisons</h2>
        <a href="{{ path('app_season_create', {series: series.id}) }}" class="btn btn-success mb-3">Créer une nouvelle saison</a>

        <div class="accordion" id="seasonsAccordion">
            {% for season in seasons %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-{{ loop.index }}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ loop.index }}" aria-expanded="false" aria-controls="collapse-{{ loop.index }}">
                            Saison {{ season.number }}: {{ season.title }}
                        </button>
                    </h2>
                    <div id="collapse-{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading-{{ loop.index }}" data-bs-parent="#seasonsAccordion">
                        <div class="accordion-body">
                            <strong>Description:</strong> {{ season.description }}<br>
                            <strong>Date de publication:</strong> {{ season.publishDate ? season.publishDate|date('Y-m-d') : 'N/A' }}<br>

                            <a href="{{ path('app_season_show', {id: season.id}) }}" class="btn btn-info mt-2">Voir</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune saison disponible pour cette série.</p>
            {% endfor %}
        </div>

        <h2 class="my-4">Commentaires</h2>

        <div class="comments-section mb-5">
            {% if series.comments is not empty %}
                <ul class="list-group">
                    {% for comment in series.comments %}
                        <li class="list-group-item d-flex justify-content-between align-items-start bg-light mb-3 rounded">
                            <div class="comment-body">
                                <h5 class="mb-1">{{ comment.userComment.username }}</h5>
                                <p class="mb-2">{{ comment.content }}</p>
                            </div>
                            <div class="btn-group">
                                <form method="post" action="{{ path('app_comment_delete', {id: comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                    <button class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash text-orange"></i>
                                    </button>
                                </form>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="alert alert-info">Aucun commentaire pour cette série.</div>
            {% endif %}
        </div>

        <h3 class="my-4">Ajouter un commentaire</h3>
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                {{ form_start(commentForm) }}
                <div class="mb-3">
                    {{ form_row(commentForm.content, {'attr': {'class': 'form-control', 'placeholder': 'Votre commentaire'}}) }}
                </div>
                <button class="btn btn-primary">
                    <i class="fas fa-paper-plane"></i> Poster
                </button>
                {{ form_end(commentForm) }}
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Film show{% endblock %}

{% block body %}
    <div class="adminBackground min-vh-100">
        {% include 'admin/navbar/navbar.html.twig' %}
        <div class="container">

            <div class="py-4"></div>
            <div class="d-flex flex-column">
                <div class="film-carousel">
                    {% include "image/index.html.twig" with {object:film} %}
                </div>
                <div class="d-flex justify-content-end my-2">
                    <a href="{{ path('film_image', {id: film.id}) }}" class="btn btn-success mx-3">Ajouter une Image</a>
                </div>
            </div>


            <div class="py-5 d-flex">
                <div class="d-flex flex-column">
                    <div class="filmVerticalImage"></div>
                    <div class="d-flex justify-content-between py-3">
                        <h3>Vertical Image</h3>
                        <div class="d-flex">
                            <h3><i class="bi bi-trash px-2"></i></h3>
                            <h3><i class="bi bi-pencil px-2"></i></h3>
                        </div>

                    </div>
                </div>

                <div class="mx-5">
                    <h2>{{ film.title }}</h2>
                    <h3>Plateform: </h3>
                    <h3>Cat√©gories: </h3>
                    <h3>Language: </h3>
                    <h3>Pubish Date: {{ film.publishDate|date('Y-m-d')}} </h3>
                    <h3>Critical Rate: {{ film.criticalRate }} / 5 </h3>
                    <p>{{ film.description }}</p>
                </div>
            </div>

            <div class="d-flex w-100 pt-5">
                <div class="w-25">
                    <h3>Comments</h3>
                </div>
                <div class="w-75">
                    <table class="users-table">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>Comment</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>user</td>
                            <td>comment</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-flex justify-content-center py-4">
                <a href="#" class="btn btn-warning">View all comments</a>
            </div>

            <div class="d-flex w-100 pt-5">
                <div class="w-25">
                    <h3>Rates :</h3>
                </div>
                <div class="w-75">
                    <table class="users-table">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>Rates</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>user</td>
                            <td>rate</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-flex justify-content-center py-4">
                <a href="#" class="btn btn-warning">View all rates</a>
            </div>

            <div class="py-5 d-flex justify-content-center">
                <a href="#" class="btn btn-warning px-4 mx-4">edit</a>
                <a href="#" class="btn btn-danger px-4 mx-4">Delete</a>
            </div>


        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}

{% include 'admin/navbar/navbar.html.twig' %}

    <div class="formContainer">
        {{ form_start(form) }}
            <h2>Edit film :</h2>

                {{ form_row(form.title) }}

                <label for="category">Category :</label>
                <input type="text" id="category" name="category" class="input-field">

                {{ form_row(form.description) }}
                {{ form_row(form.runtime) }}
                {{ form_row(form.budget) }}

                {{ form_row(form.publish_date) }}



                <label for="platforms">Platforms :</label>
                <div class="platforms">
                    <div class="platform-column">
                        <label><input type="checkbox" name="platform" value="netflix"> Netflix</label>
                        <label><input type="checkbox" name="platform" value="canal"> Canal+</label>
                        <label><input type="checkbox" name="platform" value="prime_video"> Prime Video</label>
                        <label><input type="checkbox" name="platform" value="ocs"> OCS</label>
                    </div>
                    <div class="platform-column">
                        <label><input type="checkbox" name="platform" value="disney"> Disney+</label>
                        <label><input type="checkbox" name="platform" value="paramount"> Paramount+</label>
                        <label><input type="checkbox" name="platform" value="apple_tv"> Apple TV+</label>
                        <label><input type="checkbox" name="platform" value="tf1"> TF1+</label>
                    </div>
                </div>

                <label for="vertical_image">Vertical Image :</label>
                <div class="image-upload">
                    <div class="image-box"></div>
                    <div class="d-flex flex-column mx-5">
                        <a class="btn btn-light">Replace Image</a>
                        <a class="btn btn-warning my-4">Delete Image</a>
                    </div>

                </div>

                <label for="horizontal_image">Horizontal Image :</label>

                            {% include 'admin/film/image.html.twig' with {object:film} %}




        <button type="submit" class="submit-btn">Confirm</button>
        {{ form_end(form) }}
    </div>

{% endblock %}


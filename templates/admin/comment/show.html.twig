{% extends 'base.html.twig' %}

{% block title %}Comment show{% endblock %}

{% block body %}
    {% include 'admin/navbar_admin/navbar_admin.html.twig' with {user:app.user} %}

    <div class="users-table-container d-flex flex-column" style="padding: 50px; background-color: #2C2D46; border-radius: 10px;">
        <div class="d-flex justify-content-between my-4">
            <span>User : {{ comment.userComment.username }}</span>
            <span>Series/film :</span>
            <span>CreatedAt : {{ comment.createdAt|date('Y-m-d') }}</span>
        </div>

        <h3 class="mt-3">Content</h3>
        <div style="border: 1px solid #606080; padding: 30px; margin: 0 auto; width: 100%; border-radius: 10px; background-color: #3A3B5A;">
            <p>{{ comment.content }}</p>
        </div>

        <div class="mt-2 d-flex justify-content-end">
            <div>
                <a class="btn btn-danger" href="{{ path("app_comment_delete",{id:comment.id})}}">
                    Delete
                </a>
                <a class="btn btn-primary" href="{{ path("app_comment_moderator")}}">
                    Back
                </a>
            </div>

        </div>
    </div>

{% endblock %}


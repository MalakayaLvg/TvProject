{% extends 'base.html.twig' %}

{% block title %}Détails de la saison - {{ season.title }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1 class="my-4">Détails de la saison : {{ season.title }}</h1>

        <a href="{{ path('app_show', {id: season.series.id}) }}" class="btn btn-secondary mb-3">Retour à la série</a>

        <form method="post" action="{{ path('app_season_delete', {id: season.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette saison ?');" class="my-3">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ season.id) }}">
            <button class="btn btn-danger">Supprimer</button>
            <a href="{{ path('app_season_edit', {id: season.id}) }}" class="btn btn-warning my-3">Éditer</a>
        </form>

        <table class="table table-bordered table-striped">
            <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th scope="row">Titre</th>
                <td>{{ season.title }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th scope="row">Date de publication</th>
                <td>{{ season.publishDate ? season.publishDate|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
                <th scope="row">Numéro de la saison</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th scope="row">Vu</th>
                <td>{{ season.seen ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th scope="row">Série associée</th>
                <td>{{ season.series.title }}</td>
            </tr>
            </tbody>
        </table>

        <h2 class="my-4">Épisodes</h2>
        <a href="{{ path('app_episode_create', {season: season.id}) }}" class="btn btn-success mb-3">Créer un nouvel épisode</a>

        <div class="accordion" id="episodesAccordion">
            {% for episode in season.episodes %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-episode-{{ loop.index }}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-episode-{{ loop.index }}" aria-expanded="false" aria-controls="collapse-episode-{{ loop.index }}">
                            Épisode {{ episode.number }}: {{ episode.title }}
                        </button>
                    </h2>
                    <div id="collapse-episode-{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading-episode-{{ loop.index }}" data-bs-parent="#episodesAccordion">
                        <div class="accordion-body">
                            <strong>Description:</strong> {{ episode.description ? episode.description : 'Aucune description' }}<br>
                            <strong>Date de publication:</strong> {{ episode.publishDate ? episode.publishDate|date('Y-m-d') : 'N/A' }}<br>
                            <strong>Vu:</strong> {{ episode.seen ? 'Oui' : 'Non' }}<br>

                            <a href="{{ path('app_episode_show', {id: episode.id}) }}" class="btn btn-info mt-2">Voir</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucun épisode disponible pour cette saison.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
